<!DOCTYPE html>
<html> 
    <head>
        <title><%= title %></title>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">

    </head>
    <body>

        <div class="container">
            <section ng-controller="IndexController">

                <% if (!user) { %>

                <div>
                    <a href="/signup">Crear Cuenta</a>
                    <a href="/signin">Identificarse</a>
                </div>

                <% } else { %>

                <nav class="navbar navbar-default">
                    <div class="container">
                        <ul class="nav navbar-nav">
                            <li ng-repeat="item in menu">
                                <p class="navbar-btn">
                                    <a ng-class="{ active: menuItemActive('{{item.path}}')}" class="btn btn-default"  href="/#!/{{item.path}}" >{{item.title}}</a>
                                </p>
                            </li>
                        </ul>
                    </div>
                </nav>

                <div>
                    <a class="pull-right" href="/signout">Cerrar Sesi√≥n</a>
                    <h3>Hola <span><%= user %></span></h3>                       
                </div>

                <!-- CONTENIDO BY ANGULAR JS -->
                <section ng-view></section>

                <!-- LIBRARYS -->
                <script src="/lib/angular/angular.min.js" type="text/javascript"></script>
                <script src="/lib/angular-sanitize/angular-sanitize.min.js" type="text/javascript"></script>
                <script src="/lib/tv4/tv4.js" type="text/javascript"></script>
                <script src="/lib/objectpath/lib/ObjectPath.js" type="text/javascript"></script>
                <script src="/lib/angular-schema-form/dist/schema-form.min.js" type="text/javascript"></script>
                <script src="/lib/angular-schema-form/dist/bootstrap-decorator.min.js" type="text/javascript"></script>

                <script src="/lib/angular-route/angular-route.js" type="text/javascript"></script>
                <script src="/lib/angular-resource/angular-resource.js" type="text/javascript"></script>

                <!-- My ANGULAR MODULES -->
                <script src="/lib/myLib.js" type="text/javascript"></script>
                <script src="/application.js" type="text/javascript"></script>


                <script src="/modules/index.client.module.js" type="text/javascript"></script>
                <script src="/modules/categorias.client.module.js" type="text/javascript"></script>
                <script src="/modules/apuntes.client.module.js" type="text/javascript"></script>
                <% } %>

            </section> 
        </div>
    </body>
</html>
